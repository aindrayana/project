<div class="modal fade top-80" id="loginModal" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content col-md-7 col-md-offset-3">
        <div class="modal-body">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h2 class="modal-title text-center lobster">Log in</h2>
            <img class="profile-img" src="http://2.bp.blogspot.com/-uF3K9uYgzdM/VhEQU1LqrJI/AAAAAAAAAcc/0JaQmu8uCyQ/s300-c/JOd4DPGLThifgf38Lpgj_IMG.jpgg"
                alt="">
                <%= form_tag sessions_path, :class => "form-signin" do %>
                  <%= email_field_tag :email, "", class: "form-control", placeholder: "Email", required:true %>
                  <%= password_field_tag :password, "", class: "form-control", placeholder: "Password", required:true %>
                  <%= submit_tag "Sign In", class: "btn btn-lg btn-primary btn-block" %>
                <% end %>
        </div>
        <%= link_to "Not member? Sign up here", new_user_path, class:"text-center new-account" %>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
    $("#login").click(function(){
        $("#loginModal").modal();
    });
});
</script>
