  <div class="col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 top-80">
      <% if flash[:notice] %>
      <div class="text-center bg-primary">
        <strong>You must be logged in to join, like or make a comment</strong><br>
        Please log in below
      </div>
      <% else %>
        <% flash[:notice] = nil %>
      <% end %>
      <div class="account-wall">
        <h2 class="modal-title text-center lobster bottom">Log in</h2>
        <% if flash[:alert] %>
          <div class="bottom-20 text-center bg-danger text-danger">email or password is invalid!<br>please try again</div>
          <div class="bottom-20">
            <% flash[:alert] = nil %>
          </div>
        <% else %>
          <img class="profile-img" src="http://2.bp.blogspot.com/-uF3K9uYgzdM/VhEQU1LqrJI/AAAAAAAAAcc/0JaQmu8uCyQ/s300-c/JOd4DPGLThifgf38Lpgj_IMG.jpgg"
              alt="">
        <% end %>
              <%= form_tag sessions_path, :class => "form-signin" do %>
                <%= email_field_tag :email, "", class: "form-control", placeholder: "Email", required:true %>
                <%= password_field_tag :password, "", class: "form-control", placeholder: "Password", required:true %>
                <%= submit_tag "Sign In", class: "btn btn-lg btn-primary btn-block" %>
              <% end %>
      </div>
      <%= link_to "Not a member? Sign up here", new_user_path, class:"text-center new-account" %>
  </div>
