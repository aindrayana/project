
<div>
  <!-- <div class="site-head-line text-center margin-top-30"></div> -->
  <div class="margin-top-30">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Category</th>
          <th>Date created</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% num = 0 %>
        <% @post.each do |p| %>
        <% num += 1 %>
        <tr><td><%= num %></td>
            <td><%= link_to p.title, post_path(p) %></td>
            <td>uncategorized</td>
            <td><%= p.created_at.strftime("%b %d, %Y") %></td>
            <td><%= link_to "", edit_post_path(p), class: "glyphicon glyphicon-edit" %>
                <%= link_to "", post_path(p), class: "glyphicon glyphicon-trash",
                            method: :delete,
                            data: {confirm: "Are you sure?"} %>
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<%#= @current_user.admin.inspect %>
</div>
