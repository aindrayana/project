<div class="well">

  <%= @post.errors.full_messages.join(", ") %>
  <%#= form_for @post, :html => {:class => "form-horizontal"} do |f| %>
  <%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "control-label text-right" %>
      <%= f.text_field :title, class: "form-control", placeholder: "blog title" %>
    </div>
    <div class="form-group">
      <%= f.label :body, class: "control-label text-right"  %>
      <%= f.text_area :body, class: "form-control", placeholder: "blog contents", rows: "12"%>
    </div>
    <div class="form-group">
        <%= f.submit(class: "btn btn-primary") %>
        <%= link_to 'Cancel', posts_path, class:"btn btn-primary" %>
    </div>
  <% end %>

</div>
