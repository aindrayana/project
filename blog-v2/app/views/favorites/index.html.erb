<h1 class="text-center"><i class='fa fa-heart color-red'></i> <i class='fa fa-heart color-red'></i> My favorite blogs <i class='fa fa-heart color-red'></i> <i class='fa fa-heart color-red'></i></h1>
<br><br>
<% @fav.each do |blog| %>
<div class="post-preview">
  <div class="post-date text-center">
    <div class="date">
      <span class="day"><%= blog.created_at.strftime("%d") %></span>
      <span class="month"><%= blog.created_at.strftime("%b").upcase %></span>
    </div>
    <div class="post-fav">
      <%= link_to "<i class='fa fa-heart-o'></i> remove".html_safe, post_favorite_path(blog, blog.favorite_for(current_user)), class: "text-info", method: :delete %>
    </div>
  </div>
  <div class="post-content">
    <h2 class="post-title"><%= link_to blog.title, blog_path(blog) %></h2>
    <div class="post-meta-info">
      Posted by <%= blog.user.username %> <span class="margin-left-right"> | </span><%= pluralize(blog.comments.count, "Comment") %>
    </div>
    <%= (strip_tags(blog.body)).split.first(30).join(' ').html_safe %> ...
  </div>
</div>
<hr>

<% end %>
